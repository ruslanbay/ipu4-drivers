 		sizeof(isys->v4l2_dev.name));
 
 	media_device_init(&isys->media_dev);
@@ -433,6 +546,10 @@ static int isys_register_devices(struct ipu_isys *isys)
 	if (rval)
 		goto out_isys_unregister_subdevices;
 
